#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int i, space, n , j = 0;
 scanf("%d",&n);
    for (i = 0; i < n - 1; i++) {
        for (space = 1; space < n - i; space++) {

            printf(" ");

        }
        for (j = 0; j <= 2 * i; j++) {
            if (j == 0 || j == 2 * i)
                printf("*");
            else
printf(" ");
        }
        printf("\n");

    }
    for (i = 0; i < n; i++) {
        printf("* ");
    }


    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
